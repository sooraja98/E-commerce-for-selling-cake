<%- include('../layouts/user-nav')%>

    <section>
        <% if(category){%>

            <% category.forEach((item)=>{%>

                <div id="container">

                    <div class="product-details">

                        <h1>
                            <%=item.name%>
                        </h1>



                        <!-- The most important information about the product -->
                        <p class="information">We can also customise your cake if you needed, is so contact us</p>
                        <div class="col">

                            <!-- Start Button buying -->
                            <button class="btn btn-primary">

                                <a href="userProductView?id=<%=item._id%>" style="color: aliceblue;">
                                    <span class="buy">GO</span></a>
                            </button>

                        </div>

                    </div>



                    <div class="product-image">

                        <img src="/category-image/<%=item.image%>" alt="image">

                        <!-- 	product Information-->
                        <div class="info">
                            <h2>The Description</h2>
                            <ul>
                                <li><strong>Weight </strong>1-KG</li>
                                <li><strong>Shape</strong>Round</li>
                                <li><strong>Meterial</strong>Use high quality meterials</li>

                            </ul>
                        </div>
                    </div>
                    <!--  End product image  -->


                </div>
                <%})%>

                    <%}%>

    </section>
