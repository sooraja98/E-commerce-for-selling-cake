<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <%- include('../layouts/user-profile-navbar')%>

        <section>
            <div class="container mt-5">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card card-dashboard">
                            <div class="card-body">
                                <a href="/address-delete" style="float: right;">Delete <i class="icon-delete"></i></a>
                                </p>
                                <h3 class="card-title">Address</h3>

                                </p><span style="font-weight:bold">Name : </span><br>
                                <span style="font-weight:bold">Address Line 1 : </span><br>
                                <span style="font-weight:bold">Address Line 2 : </span><br>
                                <span style="font-weight:bold">District : </span><br>
                                <span style="font-weight:bold">State : </span><br>
                                <span style="font-weight:bold">Country : </span><br>
                                <span style="font-weight:bold">PIN No : </span><br>
                                <span style="font-weight:bold">Mobile : </span><br>
                                <a href="" style="float: right;">Set as default <i class="icon-address"></i></a></p>
                                <a href="" sty>Edit <i class="icon-edit"></i></a></p>
                            </div>
                        </div>
                    </div>

                </div>

        </section>



        <section>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                            Add address
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true" style="align-items: center;">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form action="/add-address" style="padding-left: 35px; padding-right: 35px;"
                                            method="post">
                                            <label>Name </label>
                                            <input type="text" class="form-control" value="" name="name" required>


                                            <label>Address Line 1 </label>
                                            <input type="text" class="form-control" value="" name="addressline1"
                                                required>
                                            <!-- <small class="form-text">This will be how your name will be displayed in the account section and in reviews</small> -->

                                            <label>Address Line 2 </label>
                                            <input type="text" class="form-control" value="" name="addressline2"
                                                required>
                                            <label>District </label>
                                            <input type="text" class="form-control" value="" name="district" required>
                                            <label>State </label>
                                            <input type="text" class="form-control" value="" name="state" required>
                                            <label>Country </label>
                                            <input type="text" class="form-control" value="" name="country" required>
                                            <label>PIN Code </label>
                                            <input type="text" class="form-control" value="" name="pin" required>
                                            <label>Modile No. </label>
                                            <input type="text" class="form-control" value="" name="mobile" required>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Add</button>
                                    </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>

        </section>
</body>
