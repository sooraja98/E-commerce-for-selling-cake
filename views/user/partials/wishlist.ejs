<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>wishlist</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="../stylesheets/wishlist.css" rel="stylesheet" />

</head>

<body>
    <%- include('../layouts/user-profile-navbar')%>


        <section>
            <div class="cart-wrap">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="main-heading mb-10">My wishlist</div>
                            <div class="table-wishlist">
                                <table cellpadding="0" cellspacing="0" border="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th width="45%">Product Name</th>
                                            <th width="15%"> Price</th>
                                            <th width="15%"></th>
                                            <th width="10%"></th>
                                        </tr>
                                    </thead>
                                    <% wish.productId.forEach((item)=>{%>

                                        <tbody>


                                            <tr>
                                                <td width="45%">
                                                    <div class="display-flex align-center">
                                                        <div class="img-product">
                                                            <img src="product-image/<%=item.image%>"
                                                                class="card-img-top" alt="..."
                                                                style="height: 100px; width: 100%;">
                                                        </div>
                                                        <div class="name-product">
                                                            <%=item.name%>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td width="15%" class="price">
                                                    <%=item.price%>
                                                </td>

                                                <td width="15%">
                                                    <a href="addToCart?productId=<%=item._id%>&userId=<%=userId%>"><button
                                                            class="round-black-btn small-btn">Add to
                                                            Cart</button></a>
                                                </td>
                                                <td width="10%" class="text-center"><a
                                                        href="deleteWish?productId=<%=item._id%>&userId=<%=userId%>"
                                                        class="trash-icon"><i class="far fa-trash-alt"></i></a></td>
                                            </tr>
                                        </tbody>
                                        <%})%>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>
</body>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

</html>